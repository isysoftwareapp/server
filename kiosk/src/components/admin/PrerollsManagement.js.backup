"use client";
import { useState } from "react";
import Image from "next/image";
import { PrerollService } from "../../lib/prerollService";

export default function PrerollsManagement({
  prerollsConfig,
  prerollsProducts,
  onDataChange,
}) {
  const [activeSubTab, setActiveSubTab] = useState("configuration");
  const [editingProduct, setEditingProduct] = useState(null);
  const [imageFile, setImageFile] = useState(null);
  const [loading, setLoading] = useState(false);
  const [showAddForm, setShowAddForm] = useState(false);

  // Configuration form
  const [configForm, setConfigForm] = useState({
    backgroundImage: prerollsConfig?.backgroundImage || "/background.jpg",
    backgroundFit: prerollsConfig?.backgroundFit || "cover",
    isActive: prerollsConfig?.isActive !== false,
  });

  // Product form for add/edit
  const [productForm, setProductForm] = useState({
    quality: "outdoor", // outdoor, indoor, top
    strain: "sativa", // sativa, hybrid, indica
    priceSmall: 100,
    priceNormal: 150,
    priceKing: 200,
    isActive: true,
  });

  // Quality and Strain options (hardcoded)
  const qualityOptions = [
    { key: "outdoor", name: "Outdoor", color: "#06B6D4" },
    { key: "indoor", name: "Indoor", color: "#6B7280" },
    { key: "top", name: "Top Quality", color: "#000000" },
  ];

  const strainOptions = [
    { key: "sativa", name: "Sativa", color: "#FDE047" },
    { key: "hybrid", name: "Hybrid", color: "#22C55E" },
    { key: "indica", name: "Indica", color: "#3B82F6" },
  ];

  const handleSaveConfiguration = async () => {
    try {
      setLoading(true);
      await PrerollService.updateConfiguration(configForm, imageFile);
      setImageFile(null);
      onDataChange();
      alert("Configuration saved successfully!");
    } catch (error) {
      console.error("Error saving configuration:", error);
      alert("Failed to save configuration. Please try again.");
    } finally {
      setLoading(false);
    }
  };

  const handleDeleteBackground = async () => {
    if (!confirm("Are you sure you want to delete the background image?"))
      return;
    try {
      setLoading(true);
      await PrerollService.deleteBackgroundImage();
      onDataChange();
      alert("Background image deleted.");
    } catch (error) {
      console.error("Error deleting background image:", error);
      alert("Failed to delete background image. Please try again.");
    } finally {
      setLoading(false);
    }
  };

  const handleAddProduct = async () => {
    try {
      setLoading(true);
      await PrerollService.createPrerollProduct(productForm, imageFile);
      setImageFile(null);
      setProductForm({
        quality: "outdoor",
        strain: "sativa",
        priceSmall: 100,
        priceNormal: 150,
        priceKing: 200,
        isActive: true,
      });
      setShowAddForm(false);
      onDataChange();
      alert("Product added successfully!");
    } catch (error) {
      console.error("Error adding product:", error);
      alert("Failed to add product. Please try again.");
    } finally {
      setLoading(false);
    }
  };

  const handleUpdateProduct = async (id) => {
    try {
      setLoading(true);
      await PrerollService.updatePrerollProduct(id, editingProduct, imageFile);
      setImageFile(null);
      setEditingProduct(null);
      onDataChange();
      alert("Product updated successfully!");
    } catch (error) {
      console.error("Error updating product:", error);
      alert("Failed to update product. Please try again.");
    } finally {
      setLoading(false);
    }
  };

  const handleDeleteProduct = async (id) => {
    if (!confirm("Are you sure you want to delete this product?")) return;
    try {
      setLoading(true);
      await PrerollService.deletePrerollProduct(id);
      onDataChange();
      alert("Product deleted successfully!");
    } catch (error) {
      console.error("Error deleting product:", error);
      alert("Failed to delete product. Please try again.");
    } finally {
      setLoading(false);
    }
  };

  const handleInitializeDefaults = async () => {
    if (
      !confirm(
        "This will create 9 default products (3 qualities × 3 strains). Continue?"
      )
    )
      return;
    try {
      setLoading(true);
      await PrerollService.initializeDefaultData();
      onDataChange();
      alert("Default data initialized successfully! 9 products created.");
    } catch (error) {
      console.error("Error initializing defaults:", error);
      alert("Failed to initialize defaults. Please try again.");
    } finally {
      setLoading(false);
    }
  };

  const startEdit = (product) => {
    setEditingProduct({ ...product });
    setImageFile(null);
  };

  const cancelEdit = () => {
    setEditingProduct(null);
    setImageFile(null);
  };

  const getQualityLabel = (key) => {
    return qualityOptions.find((q) => q.key === key)?.name || key;
  };

  const getStrainLabel = (key) => {
    return strainOptions.find((s) => s.key === key)?.name || key;
  };

  return (
    <div className="space-y-6">
      {/* Sub-tabs */}
      <div className="flex space-x-2 border-b border-gray-200">
        <button
          onClick={() => setActiveSubTab("configuration")}
          className={`px-4 py-2 font-medium transition-colors ${
            activeSubTab === "configuration"
              ? "border-b-2 border-green-500 text-green-600"
              : "text-gray-500 hover:text-gray-700"
          }`}
        >
          Configuration
        </button>
        <button
          onClick={() => setActiveSubTab("products")}
          className={`px-4 py-2 font-medium transition-colors ${
            activeSubTab === "products"
              ? "border-b-2 border-green-500 text-green-600"
              : "text-gray-500 hover:text-gray-700"
          }`}
        >
          Products
        </button>
      </div>

      {/* Configuration Tab */}
      {activeSubTab === "configuration" && (
        <div className="bg-white rounded-lg shadow p-6 space-y-4">
          <h3 className="text-xl font-bold text-gray-900">
            Page Configuration
          </h3>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Background Image
            </label>

            {/* Preview newly selected upload */}
            {imageFile && (
              <div className="mb-3">
                <Image
                  src={URL.createObjectURL(imageFile)}
                  alt="Background preview"
                  width={600}
                  height={300}
                  className="rounded-md object-cover"
                />
              </div>
            )}

            {/* Show current background preview when available and no new upload */}
            {prerollsConfig?.backgroundImage && !imageFile && (
              <div className="mb-3">
                <Image
                  src={prerollsConfig.backgroundImage}
                  alt="Current background"
                  width={600}
                  height={300}
                  className="rounded-md object-cover"
                />
                <div className="mt-2">
                  <a
                    href={prerollsConfig.backgroundImage}
                    target="_blank"
                    rel="noopener noreferrer"
                    className="text-sm text-blue-600 hover:underline mr-4"
                  >
                    Open full image
                  </a>
                  <button
                    onClick={handleDeleteBackground}
                    disabled={loading}
                    className="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md text-sm"
                  >
                    Delete background
                  </button>
                </div>
              </div>
            )}

            <input
              type="file"
              accept="image/*"
              onChange={(e) => setImageFile(e.target.files[0])}
              className="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100"
            />
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Background Fit
            </label>
            <select
              value={configForm.backgroundFit}
              onChange={(e) =>
                setConfigForm({ ...configForm, backgroundFit: e.target.value })
              }
              className="w-full px-3 py-2 border border-gray-300 rounded-md"
            >
              <option value="cover">Cover</option>
              <option value="contain">Contain</option>
              <option value="fill">Fill</option>
            </select>
          </div>

          <div className="flex items-center">
            <input
              type="checkbox"
              checked={configForm.isActive}
              onChange={(e) =>
                setConfigForm({ ...configForm, isActive: e.target.checked })
              }
              className="mr-2"
            />
            <label className="text-sm font-medium text-gray-700">Active</label>
          </div>

          <button
            onClick={handleSaveConfiguration}
            disabled={loading}
            className="bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-md font-semibold disabled:opacity-50"
          >
            {loading ? "Saving..." : "Save Configuration"}
          </button>
        </div>
      )}

      {/* Products Tab - Table View */}
      {activeSubTab === "products" && (
        <div className="bg-white rounded-lg shadow p-6 space-y-4">
          <div className="flex justify-between items-center mb-4">
            <h3 className="text-xl font-bold text-gray-900">Products</h3>
            <div className="flex space-x-2">
              <button
                onClick={handleInitializeDefaults}
                disabled={loading}
                className="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md font-semibold disabled:opacity-50"
              >
                Initialize Default Data
              </button>
              <button
                onClick={() => setShowAddForm(!showAddForm)}
                className="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md font-semibold"
              >
                {showAddForm ? "Cancel" : "Add Product"}
              </button>
            </div>
          </div>

          {/* Add Product Form */}
          {showAddForm && (
            <div className="border border-gray-300 rounded-lg p-4 mb-4 bg-gray-50">
              <h4 className="font-bold mb-3">Add New Product</h4>
              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium mb-1">
                    Quality
                  </label>
                  <select
                    value={productForm.quality}
                    onChange={(e) =>
                      setProductForm({
                        ...productForm,
                        quality: e.target.value,
                      })
                    }
                    className="w-full px-3 py-2 border rounded-md"
                  >
                    {qualityOptions.map((q) => (
                      <option key={q.key} value={q.key}>
                        {q.name}
                      </option>
                    ))}
                  </select>
                </div>

                <div>
                  <label className="block text-sm font-medium mb-1">
                    Strain
                  </label>
                  <select
                    value={productForm.strain}
                    onChange={(e) =>
                      setProductForm({ ...productForm, strain: e.target.value })
                    }
                    className="w-full px-3 py-2 border rounded-md"
                  >
                    {strainOptions.map((s) => (
                      <option key={s.key} value={s.key}>
                        {s.name}
                      </option>
                    ))}
                  </select>
                </div>

                <div>
                  <label className="block text-sm font-medium mb-1">
                    Small Price (฿)
                  </label>
                  <input
                    type="number"
                    value={productForm.priceSmall}
                    onChange={(e) =>
                      setProductForm({
                        ...productForm,
                        priceSmall: parseInt(e.target.value) || 0,
                      })
                    }
                    className="w-full px-3 py-2 border rounded-md"
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium mb-1">
                    Normal Price (฿)
                  </label>
                  <input
                    type="number"
                    value={productForm.priceNormal}
                    onChange={(e) =>
                      setProductForm({
                        ...productForm,
                        priceNormal: parseInt(e.target.value) || 0,
                      })
                    }
                    className="w-full px-3 py-2 border rounded-md"
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium mb-1">
                    King Price (฿)
                  </label>
                  <input
                    type="number"
                    value={productForm.priceKing}
                    onChange={(e) =>
                      setProductForm({
                        ...productForm,
                        priceKing: parseInt(e.target.value) || 0,
                      })
                    }
                    className="w-full px-3 py-2 border rounded-md"
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium mb-1">
                    Product Image
                  </label>
                  <input
                    type="file"
                    accept="image/*"
                    onChange={(e) => setImageFile(e.target.files[0])}
                    className="w-full text-sm"
                  />
                  {imageFile && (
                    <Image
                      src={URL.createObjectURL(imageFile)}
                      alt="Preview"
                      width={100}
                      height={100}
                      className="mt-2 rounded object-cover"
                    />
                  )}
                </div>
              </div>

              <button
                onClick={handleAddProduct}
                disabled={loading}
                className="mt-4 bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-md font-semibold disabled:opacity-50"
              >
                {loading ? "Adding..." : "Add Product"}
              </button>
            </div>
          )}

          {/* Products Table */}
          <div className="overflow-x-auto">
            <table className="min-w-full divide-y divide-gray-200">
              <thead className="bg-gray-50">
                <tr>
                  <th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    Image
                  </th>
                  <th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    Quality
                  </th>
                  <th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    Strain
                  </th>
                  <th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    Small (฿)
                  </th>
                  <th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    Normal (฿)
                  </th>
                  <th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    King (฿)
                  </th>
                  <th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    Status
                  </th>
                  <th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody className="bg-white divide-y divide-gray-200">
                {prerollsProducts.map((product) =>
                  editingProduct?.id === product.id ? (
                    <tr key={product.id} className="bg-yellow-50">
                      <td className="px-4 py-3">
                        {imageFile ? (
                          <Image
                            src={URL.createObjectURL(imageFile)}
                            alt="Preview"
                            width={60}
                            height={60}
                            className="rounded object-cover"
                          />
                        ) : product.image ? (
                          <Image
                            src={product.image}
                            alt="Product"
                            width={60}
                            height={60}
                            className="rounded object-cover"
                          />
                        ) : (
                          <div className="w-16 h-16 bg-gray-200 rounded flex items-center justify-center text-xs">
                            No Image
                          </div>
                        )}
                        <input
                          type="file"
                          accept="image/*"
                          onChange={(e) => setImageFile(e.target.files[0])}
                          className="mt-1 text-xs"
                        />
                      </td>
                      <td className="px-4 py-3">
                        <select
                          value={editingProduct.quality}
                          onChange={(e) =>
                            setEditingProduct({
                              ...editingProduct,
                              quality: e.target.value,
                            })
                          }
                          className="w-full px-2 py-1 border rounded text-sm"
                        >
                          {qualityOptions.map((q) => (
                            <option key={q.key} value={q.key}>
                              {q.name}
                            </option>
                          ))}
                        </select>
                      </td>
                      <td className="px-4 py-3">
                        <select
                          value={editingProduct.strain}
                          onChange={(e) =>
                            setEditingProduct({
                              ...editingProduct,
                              strain: e.target.value,
                            })
                          }
                          className="w-full px-2 py-1 border rounded text-sm"
                        >
                          {strainOptions.map((s) => (
                            <option key={s.key} value={s.key}>
                              {s.name}
                            </option>
                          ))}
                        </select>
                      </td>
                      <td className="px-4 py-3">
                        <input
                          type="number"
                          value={editingProduct.priceSmall}
                          onChange={(e) =>
                            setEditingProduct({
                              ...editingProduct,
                              priceSmall: parseInt(e.target.value) || 0,
                            })
                          }
                          className="w-20 px-2 py-1 border rounded text-sm"
                        />
                      </td>
                      <td className="px-4 py-3">
                        <input
                          type="number"
                          value={editingProduct.priceNormal}
                          onChange={(e) =>
                            setEditingProduct({
                              ...editingProduct,
                              priceNormal: parseInt(e.target.value) || 0,
                            })
                          }
                          className="w-20 px-2 py-1 border rounded text-sm"
                        />
                      </td>
                      <td className="px-4 py-3">
                        <input
                          type="number"
                          value={editingProduct.priceKing}
                          onChange={(e) =>
                            setEditingProduct({
                              ...editingProduct,
                              priceKing: parseInt(e.target.value) || 0,
                            })
                          }
                          className="w-20 px-2 py-1 border rounded text-sm"
                        />
                      </td>
                      <td className="px-4 py-3">
                        <input
                          type="checkbox"
                          checked={editingProduct.isActive}
                          onChange={(e) =>
                            setEditingProduct({
                              ...editingProduct,
                              isActive: e.target.checked,
                            })
                          }
                        />
                      </td>
                      <td className="px-4 py-3">
                        <div className="flex space-x-2">
                          <button
                            onClick={() => handleUpdateProduct(product.id)}
                            disabled={loading}
                            className="bg-green-500 text-white px-3 py-1 rounded text-sm"
                          >
                            Save
                          </button>
                          <button
                            onClick={cancelEdit}
                            className="bg-gray-500 text-white px-3 py-1 rounded text-sm"
                          >
                            Cancel
                          </button>
                        </div>
                      </td>
                    </tr>
                  ) : (
                    <tr key={product.id}>
                      <td className="px-4 py-3">
                        {product.image ? (
                          <Image
                            src={product.image}
                            alt="Product"
                            width={60}
                            height={60}
                            className="rounded object-cover"
                          />
                        ) : (
                          <div className="w-16 h-16 bg-gray-200 rounded flex items-center justify-center text-xs">
                            No Image
                          </div>
                        )}
                      </td>
                      <td className="px-4 py-3 text-sm">
                        {getQualityLabel(product.quality)}
                      </td>
                      <td className="px-4 py-3 text-sm">
                        {getStrainLabel(product.strain)}
                      </td>
                      <td className="px-4 py-3 text-sm">
                        ฿{product.priceSmall}
                      </td>
                      <td className="px-4 py-3 text-sm">
                        ฿{product.priceNormal}
                      </td>
                      <td className="px-4 py-3 text-sm">
                        ฿{product.priceKing}
                      </td>
                      <td className="px-4 py-3 text-sm">
                        {product.isActive ? (
                          <span className="text-green-600 font-semibold">
                            Active
                          </span>
                        ) : (
                          <span className="text-gray-400">Inactive</span>
                        )}
                      </td>
                      <td className="px-4 py-3">
                        <div className="flex space-x-2">
                          <button
                            onClick={() => startEdit(product)}
                            className="bg-blue-500 text-white px-3 py-1 rounded text-sm"
                          >
                            Edit
                          </button>
                          <button
                            onClick={() => handleDeleteProduct(product.id)}
                            disabled={loading}
                            className="bg-red-500 text-white px-3 py-1 rounded text-sm"
                          >
                            Delete
                          </button>
                        </div>
                      </td>
                    </tr>
                  )
                )}
              </tbody>
            </table>

            {prerollsProducts.length === 0 && (
              <div className="text-center py-8 text-gray-500">
                No products yet. Click &quot;Add Product&quot; to create one.
              </div>
            )}
          </div>
        </div>
      )}
    </div>
  );
}
